<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MercadoPagoTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/px_colorPrimary</item>
        <item name="colorControlNormal">@color/px_color_new_card_text</item>
        <item name="colorAccent">@color/px_colorAccent</item>
        <item name="actionMenuTextColor">@color/px_white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="colorControlNormal">@color/px_toolbar_text</item>
        <item name="android:background">@color/px_background</item>
    </style>

    <style name="SummaryToolbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="colorControlNormal">@color/px_toolbar_text</item>
    </style>

    <style name="ToolbarTransparentTheme" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="colorControlNormal">@color/px_toolbar_text</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ReviewToolbarTheme" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="colorControlNormal">@color/px_review_toolbar_text</item>
    </style>

</resources>